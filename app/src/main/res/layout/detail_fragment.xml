<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_fragment_id"
                android:background="#ff09ada5">


    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="        Details"
        android:id="@+id/textView3"
        android:textSize="16pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff434244"
        android:textColor="#ff09ada5"
        android:textStyle="normal"

        android:textAppearance="@android:style/TextAppearance.WindowTitle"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_Name"
        android:textSize="12pt"
        android:textColor="#ff040392"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_model"
        android:textSize="12pt"
        android:textColor="#ff071183"
        android:layout_below="@+id/textView_Name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                     New Text"
        android:id="@+id/textView_rate"
        android:textSize="12pt"
        android:textColor="#ff071183"

        android:layout_below="@+id/textView_model"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_rate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>